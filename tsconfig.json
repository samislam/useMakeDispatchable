{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2017"],
    "module": "commonjs",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "declarationDir": "./@types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./@types", "./node_modules"]
}
